{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "osml check",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/osml/main.go",
            "output" : "${workspaceFolder}/debug.exe",
            "cwd": "${workspaceFolder}",
            "args": [
                "check",
                "-s",
                "./testdata/sdcard/DATA001233.DAT",
                "-o",
                "./testdata/tmp",
                "-w",
                "-r",
                "--json"
            ]
        },
        {
            "name": "osml version",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/osml/main.go",
            "output" : "${workspaceFolder}/debug.exe",
            "cwd": "${workspaceFolder}",
            "args": [
                "version",
                "--json"
            ]
        },
        {
            "name": "osml export",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/osml/main.go",
            "output" : "${workspaceFolder}/debug.exe",
            "cwd": "${workspaceFolder}",
            "args": [
                "export",
                "-s",
                "./testdata/sdcard/DATA001233.DAT",
                "-o",
                "./testdata/tmp/",
                "-f",
                "json",
                "-n",
                "my new track",
                ""
            ]
        },
        {
            "name": "osml convert",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/osml/main.go",
            "output" : "${workspaceFolder}/debug.exe",
            "cwd": "${workspaceFolder}",
            "args": [
                "convert",
                "-s",
                "./testdata/sdcard/DATA001234.DAT",
                "-f",
                "DATA001231.DAT, DATA001232.DAT",
                "-f",
                "DATA001233.DAT"
            ]
        },
        {
            "name": "osml logger",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/osml/main.go",
            "output" : "${workspaceFolder}/debug.exe",
            "cwd": "${workspaceFolder}",
            "args": [
                "logger",
                "write",
                "-s",
                "./testdata/sdcard",
                "--vesselid",
                "1234",
                "-a",
                "9600",
                "-b",
                "19200",
                "--seatalk",
                "--gyro",
                "--supply",
                "--json"               
            ]
        },
        {
            "name": "osml logger read",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/osml/main.go",
            "output" : "${workspaceFolder}/debug.exe",
            "cwd": "${workspaceFolder}",
            "args": [
                "logger",
                "read",
                "-s",
                "f:",
                "--json"
            ],
        }
    ]
}