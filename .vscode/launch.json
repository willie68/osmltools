    "version": "0.2.0",
    "configurations": [
        {
            "name": "osml check",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/osml/main.go",
            "output" : "${workspaceFolder}/debug.exe",
            "cwd": "${workspaceFolder}",
            "args": [
                "check",
                "-s",
                "./testdata/sdcard",
                "-o",
                "./testdata/tmp",
                "-w",
                "-r"
            ]
        },
        {
            "name": "osml export",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/osml/main.go",
            "output" : "${workspaceFolder}/debug.exe",
            "cwd": "${workspaceFolder}",
            "args": [
                "export",
                "-s",
                "./testdata/sdcard",
                "-o",
                "./testdata/tmp/track.nmea",
                "-f",
                "gpx"
            ]
        }
    ]
}